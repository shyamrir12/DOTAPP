<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/lenear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_catlogName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="CatalogName *">
            <AutoCompleteTextView
                android:id="@+id/catlogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="                              "
                android:textSize="15sp"
                android:inputType="text" />
            </android.support.design.widget.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lenear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lenear1"
            android:layout_margin="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Design *">
                <AutoCompleteTextView
                    android:id="@+id/design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="                   "
                    android:textSize="15sp"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_sno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="S.No">

                <EditText
                    android:id="@+id/sNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="     "
                    android:inputType="number"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_pageNo."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Page No"
                android:layout_weight="1">
            <EditText
                android:id="@+id/pageNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="     "
                android:textSize="15sp"
                android:inputType="number" />
            </android.support.design.widget.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/lenear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lenear2"
            android:layout_margin="10dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Qty"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/qTy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="                  "
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/aQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="AQty"
                android:textSize="15sp"
                android:visibility="gone"
                android:inputType="numberDecimal" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mrp *"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="               "
                    android:textSize="15sp"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="% *"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="               "
                    android:textSize="15sp"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lenear4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lenear3"
            android:layout_margin="10dp">


            <Spinner
                android:id="@+id/materialType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/MaterialType"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Unit"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lenear5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lenear4"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Add"
                android:textColor="@color/white"
                android:background="@drawable/add_cancel_button_shape" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="2dp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@color/white"
                android:background="@drawable/add_cancel_button_shape" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>