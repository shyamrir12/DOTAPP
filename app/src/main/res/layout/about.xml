<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/snskriti"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
            <android.support.v7.widget.CardView
                android:id="@+id/nameApp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_below="@+id/logo">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Sanskriti Decore"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/devNameApp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_below="@+id/nameApp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Developed and Designed By : Awizom Tech Bytes"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/aboutApp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_below="@+id/devNameApp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thoryAbout"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="10dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:text=" @Copyright Awizom Tech Bytes"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_below="@+id/aboutApp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>