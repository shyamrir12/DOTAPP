                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dp" />
                    </LinearLayout>

                    <LinearLayout
