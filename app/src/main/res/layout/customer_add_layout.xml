<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_margin="10dp"-->
            <!--app:cardCornerRadius="8dp"-->
            <!--app:cardElevation="10dp">-->

            <RelativeLayout
                android:id="@+id/centre_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/customerName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/customername"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:layout_above="@+id/contact"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="14dp"
                    android:background="@drawable/signin_sinup_button_shape" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/customercontact"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_above="@+id/cus_address"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/signin_sinup_button_shape"
                    android:paddingLeft="14dp" />

                <EditText
                    android:id="@+id/cus_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="false"
                    android:hint="@string/address"
                    android:inputType="text"
                    android:layout_above="@+id/interior_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/signin_sinup_button_shape"
                    android:paddingLeft="14dp" />

                <EditText
                    android:id="@+id/interior_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/signin_sinup_button_shape"
                    android:paddingLeft="14dp" />

                <EditText
                    android:id="@+id/interior_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/interioMobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:layout_below="@+id/interior_name"
                    android:background="@drawable/signin_sinup_button_shape"
                    android:paddingLeft="14dp" />

                <Button
                    android:id="@+id/customer_add_button"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts"
                    android:textSize="15sp"
                    android:layout_below="@+id/interior_mobile"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/add_cancel_button_shape" />

            </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="              " />

</RelativeLayout>