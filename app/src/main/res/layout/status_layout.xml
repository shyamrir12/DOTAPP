<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    tools:context=".CustomerActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/l0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Pending List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="10dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/r0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l0">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/pendingToPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_place"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/pendingtoreceivedMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pendingtorecevedMaterial"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/l2">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/handover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/handover"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lo">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tailor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tailor"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/pendingTorecevefrometailor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pendinTorecevFromTailor"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/receivedby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receivedby"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lq"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l4"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/dispatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dispatch"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container" />

</RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation"
        app:itemTextColor="@color/colorPrimaryDark"
        android:fitsSystemWindows="false"
        android:layoutMode="clipBounds"
        app:labelVisibilityMode="labeled"/>

</android.support.constraint.ConstraintLayout>